@model IEnumerable<BibliotecaMVC.Models.Livro>
@{
    Layout = null;
}
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-xs-6 col-md-3">
            <div class="thumbnail" style="width: 20rem;">
                <img class="card-img-top" src="~/@item.Foto">
                <div class="card-block">
                    <h4 class="card-title">@item.Titulo</h4>
                    <p class="card-text">
                        Quantidade: @item.Quantidade
                    </p>
                    <a asp-area="" asp-controller="Carrinho" aspaction="Adicionar"
                       asp-route-id="@item.LivroID" class="btn btnprimary">
                        Add ao Carrinho
                    </a>
                </div>
            </div>
        </div>
    }
</div>